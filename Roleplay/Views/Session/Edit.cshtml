@model Roleplay.ViewModels.EditSessionViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit session</h1>
<hr />

<form class="container col-md-6" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Session.SessionID" />
    <div class="form-group">
        <label asp-for="Session.AdventureID" class="control-label">Adventure</label>
        <select required asp-for="Session.AdventureID" class="form-control" asp-items="Model.Adventures"></select>
        <span asp-validation-for="Session.AdventureID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Session.Date" class="control-label"><i class="fa fa-calendar"></i> Date </label>
        <input required asp-for="Session.Date" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}"/>
        <span asp-validation-for="Session.Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedSessionPlayers" class="control-label">Players</label>
        <select required asp-for="SelectedSessionPlayers" class="form-control" asp-items="Model.SessionPlayers"></select>
        <span asp-validation-for="SelectedSessionPlayers" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Session.Recap" class="control-label">Recap</label>
        <textarea rows="5" asp-for="Session.Recap" class="form-control"></textarea>
        <span asp-validation-for="Session.Recap" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Session.SessionGamemaster" class="control-label">Gamemaster</label>
        <input required asp-for="Session.SessionGamemaster" class="form-control" />
        <span asp-validation-for="Session.SessionGamemaster" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">Session played?</label><p></p>
        <input class="form-check-input" asp-for="Session.IsPlayed" /> 
        @Html.DisplayNameFor(model => model.Session.IsPlayed)
    </div>
    <div class="form-group">
        <label asp-for="Session.Duration" class="control-label">Duration in hours</label>
        <input asp-for="Session.Duration" class="form-control" />
        <span asp-validation-for="Session.Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<p></p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
